{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    // launch the current file
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Current JS File",
      "skipFiles": ["<node_internals>/**"],
      "program": "${file}"
    },

    // Compile the ts
    {
      "type": "node",
      "request": "launch",
      "name": "Build Program",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/Bot/node_modules/typescript/bin/tsc",
      "args": ["-p", "${workspaceFolder}/Bot/tsconfig.json"],
      "outFiles": ["${workspaceFolder}/Bot/build/**/*.js"]
    },
    // rest the commands
    {
      "type": "node",
      "request": "launch",
      "name": "Update Commands with REST",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/Bot/rest.js"
    },
    // launch index.js
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program (JS)",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "start-prod"],
      "skipFiles": ["<node_internals>/**"],
      "preLaunchTask": "npm: build - Bot",
      "cwd": "${workspaceFolder}/Bot"
    },
    // npm run start
    {
      "name": "Launch Bot (TS)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "start"],
      "skipFiles": ["<node_internals>/**"],
      "cwd": "${workspaceFolder}/Bot"
    },
    // Lauch Bot dev
    {
      "name": "Launch Bot Dev (Watch)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "skipFiles": ["<node_internals>/**"],
      "cwd": "${workspaceFolder}/Bot"
    }
  ]
}
